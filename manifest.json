{
    "manifest_version": 3,
    "name": "Quick Linker",
    "version": "1.4",
    "description": "Redirects shortened keywords to websites.",
    "background": {
        "service_worker": [
            "src/service_workers/background.js",
            "src/service_workers/storage.js"
        ]
    },
    "permissions": ["storage", "tabs"],
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_icon": {
            "16": "src/icons/icon16.png",
            "48": "src/icons/icon48.png",
            "128": "src/icons/icon128.png"
        }
    },
    "options_page": "src/options/options.html",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/helpers/generateId.js", "src/components/Alias.js"],
            "css": ["content.css"]
        }
    ],
    "icons": {
        "16": "src/icons/icon16.png",
        "48": "src/icons/icon48.png",
        "128": "src/icons/icon128.png"
    },
    "omnibox": { "keyword": "go" }
}
